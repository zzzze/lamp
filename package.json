{
  "version": "0.0.7",
  "private": "true",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "webpack --color",
    "watch": "cross-env LAMP_DEV=1 webpack --progress --color --watch",
    "start": "cross-env LAMP_DEV=1 electron packages/app --debug",
    "prod": "cross-env LAMP_DEV=1 electron packages/app",
    "test-hexo-integration": "rm -rf packages/lamp-core/tests/integration/tmp/ || : && ava packages/lamp-core/tests/integration/**.test.ts --verbose",
    "test-hexo-unit": "ava packages/lamp-core/tests/unit/**.test.ts --verbose",
    "test": "npm run test-hexo-unit && npm run test-hexo-integration",
    "lint": "tslint --project src/app",
    "eslint": "eslint --ext ts --ext tsx packages/*/src/ --fix",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "ava": {
    "files": [
      "tests/**.test.ts"
    ],
    "compileEnhancements": false,
    "failWithoutAssertions": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "build": {
    "asar": true,
    "appId": "org.lamp",
    "productName": "Lamp",
    "compression": "normal",
    "files": [
      {
        "from": "packages/app",
        "to": "./",
        "filter": ["**/*"]
      },
      {
        "from": "packages/lamp-core",
        "to": "lamp-core",
        "filter": ["**/*"]
      },
      {
        "from": "packages/lamp-editor",
        "to": "lamp-editor",
        "filter": ["**/*"]
      },
      {
        "from": "packages/lamp-settings",
        "to": "lamp-settings",
        "filter": ["**/*"]
      },
      {
        "from": "packages/shared",
        "to": "shared",
        "filter": ["**/*"]
      }
    ],
    "extraResources": [
      "builtin-plugins",
      "extras"
    ],
    "win": {
      "icon": "./build/windows/icon.ico",
      "artifactName": "lamp-${version}-setup.exe",
      "rfc3161TimeStampServer": "http://sha256timestamp.ws.symantec.com/sha256/timestamp"
    },
    "nsis": {
      "oneClick": false,
      "artifactName": "lamp-${version}-setup.${ext}",
      "installerIcon": "./build/windows/icon.ico"
    },
    "publish": [
      {
        "provider": "github"
      }
    ],
    "portable": {
      "artifactName": "lamp-${version}-portable.exe"
    },
    "mac": {
      "category": "public.app-category.video",
      "icon": "./packages/app/assets/icon.icns",
      "artifactName": "lamp-${version}-macos.${ext}",
      "hardenedRuntime": true,
      "entitlements": "./build/mac/entitlements.plist",
      "entitlementsInherit": "./build/mac/entitlements.plist",
      "extendInfo": {
        "NSRequiresAquaSystemAppearance": false
      }
    },
    "pkg": {
      "artifactName": "lamp-${version}-macos.pkg"
    },
    "linux": {
      "category": "Utilities",
      "icon": "./build/icons",
      "artifactName": "lamp-${version}-linux.${ext}"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libsecret-1-0",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ],
      "afterInstall": "build/linux/after-install.tpl"
    },
    "rpm": {
      "depends": [
        "screen",
        "gnome-python2-gnomekeyring"
      ]
    }
  },
  "dependencies": {
    "editor.md": "^1.5.0",
    "hexo": "^3.9.0",
    "jquery": "^3.4.1",
    "raven-js": "^3.27.2",
    "electron-debug": "^3.0.1",
    "electron-is-dev": "^1.1.0",
    "electron-store": "^5.1.0",
    "glob": "^7.1.5",
    "js-yaml": "^3.13.1",
    "clsx": "^1.0.4",
    "react": "^16.10",
    "react-dom": "^16.10",
    "react-redux": "^7.1.1",
    "redux": "^4.0.4",
    "redux-saga": "^1.1.1",
    "utility-types": "^3.9.0",
    "@material-ui/core": "^4.5.2",
    "@material-ui/icons": "^4.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@storybook/addon-actions": "^5.1.11",
    "@storybook/addon-knobs": "^5.1.11",
    "@storybook/addon-links": "^5.1.11",
    "@storybook/addon-notes": "^5.1.11",
    "@storybook/addon-storysource": "^5.1.11",
    "@storybook/addons": "^5.1.11",
    "@storybook/react": "^5.1.11",
    "@types/chai": "^4.2.2",
    "@types/chai-subset": "^1.3.3",
    "@types/electron": "^1.6.10",
    "@types/fs-extra": "^8.0.0",
    "@types/glob": "^7.1.1",
    "@types/hexo": "^3.8.2",
    "@types/node": "^12.11.1",
    "@types/proxyquire": "^1.3.28",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "@types/react-redux": "^7.1.4",
    "@types/shelljs": "^0.8.5",
    "@types/sinon": "^7.0.13",
    "@types/tar": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "ava": "^2.3.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chai-subset": "^1.6.0",
    "copy-webpack-plugin": "^5.0.4",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "electron": "^6.0.11",
    "electron-builder": "^21.2.0",
    "eslint": "^6.5.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-standard": "^4.0.1",
    "exports-loader": "^0.7.0",
    "file-loader": "^4.2.0",
    "fs-extra": "^8.1.0",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.12.0",
    "npm": "^6.11.3",
    "proxyquire": "^2.1.3",
    "pug-html-loader": "^1.1.5",
    "sass-loader": "^8.0.0",
    "script-loader": "^0.7.2",
    "shelljs": "^0.8.3",
    "sinon": "^7.4.2",
    "style-loader": "^1.0.0",
    "tar": "^4.4.10",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.3.0",
    "tsc": "^1.20150623.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.2",
    "url-loader": "^2.1.0",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.8"
  }
}
